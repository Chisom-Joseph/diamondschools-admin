<%- include("../../partials/header") %>
<main class="content">
  <div class="container-fluid p-0">

    <div class="mb-3">
      <h1 class="h3 d-inline align-middle">Exam settings</h1>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">Exam information</h5>
          </div>
          <div class="card-body">
            <form method="POST" action="?action=add">
              <% if(alert.status === "error") { %>
              <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <div class="alert-message">
                  <strong>Error!</strong> <%- alert.message %>
                </div>
              </div>
              <% } %>
              <% if(alert.status === "success") { %>
              <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <div class="alert-message pr-5">
                  <strong>Sucess!</strong> <%- alert.message %>
                </div>
              </div>
              <% } %>
              <!-- Personal Information -->
              <h4 class="mt-3">Exam settings and meta data</h4>
              <div class="row">
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="duration">Duration (seconds)</label>
                  <input id="duration" name="duration" type="number" class="form-control" placeholder="Type duration in seconds">
                </div>
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="questionLimit">Question limit</label>
                  <input id="questionLimit" name="questionLimit" type="number" class="form-control" placeholder="Type question Limits">
                </div>
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="shuffleQuestions">Shuffule Questions</label>
                  <select class="form-control" id="shuffleQuestions" name="subject">
                    <option>Yes</option>
                    <option>No</option>
                  </select>
                </div>
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="shuffleOptions">Shuffule Options</label>
                  <select class="form-control" id="shuffleOptions" name="subject">
                    <option>Yes</option>
                    <option>No</option>
                  </select>
                </div>
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="markPerQuestion">Mark per question</label>
                  <input id="markPerQuestion" name="markPerQuestion" type="number" class="form-control" placeholder="Type duration in seconds">
                </div>
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="markPerQuestion">Start date</label>
                  <input id="markPerQuestion" name="markPerQuestion" type="date" class="form-control" placeholder="Type duration in seconds">
                </div>
                <div class="mb-2 col-md-6">
                  <label class="form-label" for="markPerQuestion">End date</label>
                  <input id="markPerQuestion" name="markPerQuestion" type="date" class="form-control" placeholder="Type duration in seconds">
                </div>
              </div>

              <!-- Submit Button -->
              <button disabled type="submit" class="btn btn-primary">Submit</button>
            </form>

          </div>
        </div>
      </div>
    </div>


  </div>
</main>

<script>
  const form = JSON.parse('<%- JSON.stringify(form) %>');
  console.log(form);
</script>

