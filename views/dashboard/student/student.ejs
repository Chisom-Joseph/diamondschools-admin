<%- include("../../partials/header") %>
  <main class="content">
    <div class="container-fluid p-0">

      <div class="mb-3">
        <h1 class="h3 d-inline align-middle">Student</h1><a class="badge bg-primary ms-2"
          href="/dashboard/all-students">All Students <i class="fas fa-fw fa-external-link-alt"></i></a>
        <a class="badge bg-primary ms-2" href="/dashboard/result?student=<%= student.id %>">Result <i
            class="fas fa-fw fa-external-link-alt"></i></a>
      </div>

      <div class="row">

        <div class="col-xl-12">
          <div class="card">
            <div class="card-header">
              <div class="card-actions float-end">
                <div class="dropdown position-relative">
                  <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
                    <i class="align-middle" data-feather="more-horizontal"></i>
                  </a>

                  <div class="dropdown-menu dropdown-menu-end">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                  </div>
                </div>
              </div>
              <h5 class="card-title mb-3">Aspitan details</h5>
              <div class="mb-0 d-flex gap-2 flex-wrap">
                <button class="btn btn-primary" disabled><i class="far fa-smile"></i> Approve</button>
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#edit"><i
                    class="far fa-smile"></i> Edit </button>
                <button class="btn btn-warning" disabled><i class="fas fa-ban"></i> Block</button>
                <button class="btn btn-danger" disabled><i class="fas fa-times"></i> Delete</button>
              </div>
            </div>
            <div class="card-body">
              <div class="row g-5">
                <% if(alert.status==="error" ) { %>
                  <div class="col-12">
                    <div class="alert alert-danger alert-dismissible" role="alert">
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      <div class="alert-message">
                        <strong>Error!</strong> <%- alert.message %>
                      </div>
                    </div>
                  </div>
                  <% } %>
                    <% if(alert.status==="success" ) { %>
                      <div class="col-12">
                        <div class="alert alert-success alert-dismissible" role="alert">
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                          <div class="alert-message pr-5">
                            <strong>Sucess!</strong> <%- alert.message %>
                          </div>
                        </div>
                      </div>
                      <% } %>
                        <div class="col-sm-12 col-lg-7">
                          <table class="table table-sm mt-2 mb-4">
                            <tbody>
                              <tr>
                                <th>First Name</th>
                                <td>
                                  <%= student.firstName %>
                                </td>
                              </tr>
                              <tr>
                                <th>Middle Name</th>
                                <td>
                                  <%= student.middleName %>
                                </td>
                              </tr>
                              <tr>
                                <th>Last Name</th>
                                <td>
                                  <%= student.lastName %>
                                </td>
                              </tr>
                              <tr>
                                <th>Gender</th>
                                <td>
                                  <%= student.gender %>
                                </td>
                              </tr>
                              <tr>
                                <th>Religion</th>
                                <td>
                                  <%= student.religion %>
                                </td>
                              </tr>
                              <tr>
                                <th>Nationality</th>
                                <td>
                                  <%= student.country %>
                                </td>
                              </tr>
                              <tr>
                                <th>State Of Origin</th>
                                <td>
                                  <%= student.stateOfOrigin %>
                                </td>
                              </tr>
                              <tr>
                                <th>Address</th>
                                <td>
                                  <%= student.address %>
                                </td>
                              </tr>
                              <tr>
                                <th>Date Of Birth</th>
                                <td>
                                  <%= student.dateOfBirth %>
                                </td>
                              </tr>
                              <tr>
                                <th>Guardian Full Name</th>
                                <td><a href="/dashboard/guardian/<%= student.guardian.id %>">
                                    <%= student.guardian.firstName %>
                                      <%= student.guardian.middleName %>
                                        <%= student.guardian.lastName %>
                                  </a></td>
                              </tr>
                              <tr>
                                <th>Status</th>
                                <td>
                                  <% if(student.status===true) { %>
                                    <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                      <span class="badge bg-danger">Not active</span>
                                      <% } %>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                        </div>

                        <div class="col-sm-12 col-lg-5">
                          <strong class="mb-2 d-block">Profile image</strong>
                          <img class="img-fluid" src="<%= student.profileImageUrl %>"
                            alt="<%= student.firstName %> <%= student.middleName %> <%= student.lastName %>">
                        </div>
              </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </main>
  <!-- Modal -->
  <div class="modal fade" id="centeredModalPrimary" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <form action="?action=make-student" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Make Student</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body m-3">
            <p class="mb-0">Are you sure you want to make <b><%- student.firstName %> <%- student.middleName %> <%-
                      student.lastName %></b> a student?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success">Yes, Make student</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal modal-lg fade" id="edit" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Student</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body m-3">
          <form action="?action=edit-student-info" method="POST">
            <div class="row">
              <h4 class="mt-3">Student's Info</h4>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" placeholder="First Name" name="firstName"
                  value="<%= form.firstName || student.firstName %>">
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="middleName">Middle Name</label>
                <input type="text" class="form-control" id="middleName" placeholder="Middle Name" name="middleName"
                  value="<%= form.middleName || student.middleName %>">
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Last Name" name="lastName"
                  value="<%= form.lastName || student.lastName %>">
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="academicYear">Academic Year</label>
                <select name="academicYear" class="form-select" name="academicYear" <%=academicYears.length> 0 ? "" :
                  "disabled" %>>
                  <option selected disabled hidden>Choose Academic Year</option>
                  <% if(academicYears.length> 0){ %>
                    <% academicYears.forEach(academicYear=> { %>
                      <option value="<%= academicYear.id %>" <%=form.academicYear===academicYear.id ||
                        student.AcademicYearId===academicYear.id ? "selected" : "" %>
                        ><%= academicYear.year %>
                      </option>
                      <% }) %>
                        <% } else { %>
                          <option selected disabled hidden>No Academic Year Found</option>
                          <% } %>
                </select>
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="country">Nationality</label>
                <select id="country" class="form-select" name="country" <%=countries.length> 0 ? "" : "disabled" %>>
                  <option selected disabled hidden>Choose Nationality</option>
                  <% if(countries.length> 0){ %>
                    <% countries.forEach(country=> { %>
                      <option value="<%= country.isoCode %>" <%=form.country===country.isoCode ||
                        student.country===country.name ? "selected" : "" %>><%= country.name %>
                      </option>
                      <% }) %>
                        <% } else { %>
                          <option selected disabled hidden>No Country Found</option>
                          <% } %>
                </select>
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="stateOfOrigin">State Of Origin</label>
                <select id="stateOfOrigin" class="form-select" name="stateOfOrigin" <%=student.stateOfOrigin
                  ? "student.stateOfOrigin" : "disabled" %>>
                  <option selected disabled hidden>Choose State</option>
                  <% if(currentCountryStates.length> 0){ %>
                    <% currentCountryStates.forEach(country=> { %>
                      <% }) %>
                        <option selected disabled hidden>Choose State</option>
                        <% } else { %>
                          <option>state</option>
                          <% } %>
                </select>
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="religion">Religion</label>
                <select id="religion" class="form-select" name="religion" <%=religions.length> 0 ? "" : "disabled" %>>
                  <option selected disabled hidden>Choose Religion</option>
                  <% if(religions.length> 0){ %>
                    <% religions.forEach(religion=> { %>
                      <option value="<%= religion.name %>" <%=form.religion===religion.name ||
                        student.religion===religion.name ? "selected" : "" %>><%= religion.name %>
                      </option>
                      <% }) %>
                        <% } else { %>
                          <option selected disabled hidden>No Religion Found</option>
                          <% } %>
                </select>
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="dateOfBirth">Date Of Birth</label>
                <input id="dateOfBirth" type="date" class="form-control" name="dateOfBirth"
                  value="<%= form.dateOfBirth || student.dateOfBirth %>">
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="gender">Gender</label>
                <select class="form-control" id="gender" name="gender" value="<%= form.gender %>">
                  <option selected disabled hidden>Select Gender</option>
                  <option value="male" <%=form.gender==="male" || student.gender==="male" ? "selected" : "" %>>Male
                  </option>
                  <option value="female" <%=form.gender==="female" || student.gender==="female" ? "selected" : "" %>
                    >Female</option>
                  <option value="other" <%=form.gender==="other" || student.gender==="other" ? "selected" : "" %>>Other
                  </option>
                </select>
              </div>
              <div class="mb-3 col-md-6">
                <label class="form-label" for="class">Class</label>
                <select class="form-control" id="class" name="class" <%=classes.length <=0 ? "disabled" : "" %>>
                  <% if(classes.length> 0) { %>
                    <option disabled selected hidden>Select class</option>
                    <% classes.map((classItem)=> { %>
                      <option value="<%= classItem.id %>" <%=form.class===classItem.id || student.ClassId===classItem.id
                        ? "selected" : "" %>><%= classItem.name %>
                      </option>
                      <% }) %>
                        <% } else { %>
                          <option disabled selected hidden>No classes found</option>
                          <% } %>
                </select>
              </div>
              <div class="mb-3 col-md-12">
                <label class="form-label" for="address">Address</label>
                <textarea id="address" class="form-control" name="address"
                  placeholder="Your Present Address"><%= form.address || student.address %></textarea>
              </div>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
          <form action="?action=edit-student-photo" method="POST">
            <div class="row">
              <h4 class="mt-3">Profile Photo</h4>
              <div class="mb-3 col-md-12">
                <label class="form-label" for="profilePhoto">Profile Photo</label>
                <input type="file" class="form-control" id="profilePhoto" placeholder="Select Profile Photo"
                  name="profilePhoto" accept="png,jpg,jpeg">
              </div>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
        </div>
        <div class="modal-footer d-flex justify-content-center">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    const form = JSON.parse('<%- JSON.stringify(form) %>');
    const states = JSON.parse(`<%- JSON.stringify(states) %>`);
    const userCountry = JSON.parse(`<%- JSON.stringify(student.country) %>`) || ""
  </script>
  <%- include("../../partials/footer") %>